@using WCS.Models;
@model WCS.Models.UniversityInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .cost {
        font-size: 17px;
        color: red;
        font-weight: bold;
    }
</style>
<div style="text-align:center;">
    <h1>Cторінка підрахунку</h1>
    @if (Model == null)
    {
        <form method="get" style="margin: 0px 0">
            <label>
                Оберіть університет (достатньо вписати 3 символи)<br />
                @Html.EditorFor( Model => Model.UniversityID )
            </label><br />
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary">
                    <input type="checkbox" name="award" value="true" />Отримую стипендію
                </label>
                <label class="btn btn-primary">
                    <input type="checkbox" name="contract" value="true" />На контракті
                </label>
            </div>
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary">
                    <input type="radio" name="choose" value="1" required="required" />Проживаю з батьками
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="choose" value="2" />Знімаю квартиру
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="choose" value="3" />Проживаю в гуртожитку
                </label>
            </div>
            <input type="submit" value="Далі">
            <div class="clear"></div>
        </form>
    }
    else
    {
        if (!Model.IsNaN)
        {
    <table align="center" width="70%" style="text-align:center; border: 2px solid #B0B0B0">
        <tr>
            <td colspan="2">
                        <p>
                            Приблизна оцінка вартості життя навчаючись

                            @if (Model.IsContract)
                            { <span>на контракті</span> }

                            @if (Model.IsHaveAward)
                            { <span>та отримуючи стипендію</span> }

                            в "@Model.UniversityName", що розташований в "@Model.StateName" якщо

                            @if (Model.Choose == 1)
                            { <span>проживати з батьками</span> }

                            @if (Model.Choose == 2)
                            { <span>знімати квартиру</span> }

                            @if (Model.Choose == 3)
                            { <span>проживати в гуртожитку</span> }
                            :
                        </p>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <p>
                    @if (Model.IsHaveAward)
                    { <span>Стипендія: <span>@Model.Award грн.</span></span> }
                    @if (Model.IsContract)
                    {
                         <span>Плата за навчання: <span>@Model.MaximalTaitionFee грн.</span></span> 
                    }
                </p>
                @if (Model.choose == 1)
                {
                    <p>
                                Приблизні витрати при проживанні з батьками (в місяць): <span>@Model.ExpensesWithFamily₴</span>
</p> 
                }
                @if (Model.choose == 2)
                {
                    <p>
                        Приблизні витрати знімаючи квартиру (в місяць): <span>@Model.ExpensesWithoutFamily₴</span>
</p>
                    <p>
                                Місячна плата за квартиру / кімнату: <span>@Model.RentsWithoutFamily₴</span>
</p>
                }
                @if (Model.choose == 3)
                {
                    <p>
                        Приблизні витрати проживаючи в гуртожитку (в місяць): <span>@Model.ExpensesDormitory₴</span>
</p>
                    <p>
                                Місячна плата за кімнату в гуртожитку: <span>@Model.RentsDormitory₴</span>
</p>
                }
                        <p>
                            Отже в загальному ви будете
                @if (Model.Result > 0)
                {
                    <span>втрачати приблизно <span class="cost">@Model.Result₴</span></span>
                }
                else
                {
                    <span>отримувати приблизно <span class="cost">@(-@Model.Result)₴</span></span>
                }
                в місяць.
                            @if (Model.budjet)
                            { <span>(Враховуючи стипендію)</span> }
                        </p>
                <p>Дякую за використання нашого сервісу!</p>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:right">
                Кнопки шеринга в сетях
            </td>
        </tr>
    </table>
        }
        else
        {
            <p>Для цього університету ще не додано жодної інформації!</p>
            <p>Допоможіть нам її зібрати! @Html.ActionLink( "Заповніть форму", "StudentPage", "Note", new { UniversityID = Model.UniversityID }, null )</p>
        }
    }
</div>
