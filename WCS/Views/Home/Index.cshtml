@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WCS.Models.Note
@Html.DisplayForModel()
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="submit" alt="Delete" value="Delete"/>
</form>
<p> 
        @if (ViewBag.Past) {
            @Html.ActionLink( "Назад", "Index", "Home", new { id = ViewBag.PastInd }, new { @class = "navbar-brand" } );}
        @if (ViewBag.Next) {
            @Html.ActionLink( "Вперед", "Index", "Home", new { id = ViewBag.NextInd }, new { @class = "navbar-brand" } );}
</p>